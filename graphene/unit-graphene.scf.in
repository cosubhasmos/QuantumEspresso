 !nbnd = 8
 degauss=0.001
 /
 
 &ELECTRONS
 diagonalization='david'
 mixing_mode='plain'
 electron_maxstep = 100,
 conv_thr = 1.0D-8,
 mixing_beta=0.6
 /
 &ions
