 &control
    calculation = 'scf'
    restart_mode= 'from_scratch'
    prefix='graphene'
    tstress=.true.
    tprnfor=.true.
    forc_conv_thr=1.0d-3
    etot_conv_thr=1.0d-4
    verbosity='high'	
    outdir='./'
    pseudo_dir = './',
 /
 &SYSTEM
 ibrav=4
 celldm(1)=4.65
 celldm(3)=4.0
