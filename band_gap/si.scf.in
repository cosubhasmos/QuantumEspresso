&control
    calculation = 'scf',
    prefix = 'silicon'
    outdir = './.'
    pseudo_dir = './.'
    verbosity = 'high'
 /
 &system
    ibrav =  2,
    celldm(1) = 10.38,
    nat =  2,
    ntyp = 1,
    ecutwfc = 50,
    ecutrho = 400,
