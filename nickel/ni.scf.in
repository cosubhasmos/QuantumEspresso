&control
    calculation = 'scf',
    prefix = 'nickel'
    outdir = './.'
    pseudo_dir = './.'
    restart_mode = 'from_scratch'
    wf_collect = .false.
    verbosity = 'high'
 /
 &system
    ibrav =  2,
    celldm(1) = 10.66,
    nat =  1,
    ntyp = 1,
    ecutwfc = 50,
    nbnd = 20,
    occupations = 'smearing'
    smearing = 'mp'
    degauss = 0.02
 /
 &electrons
    diagonalization = 'david'
    mixing_beta = 0.7
    conv_thr = 1.0d-7
 /
 
